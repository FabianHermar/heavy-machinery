---
import { Image } from 'astro:assets'
import '../globals.css'

interface Props {
  title: string
  description?: string
  href?: string
  image: string
  alt?: string
}

const { title, description, href, image, alt } = Astro.props
---

<section>
  <div
    class='relative text-gray-700 bg-white border-1 border-gray-700 w-72 lg:w-[320px] rounded-lg'
  >
    <div class='select-none flex items-center justify-center'>
      <Image src={image} alt={alt} width='250' height='250' />
    </div>
    <a href={href} class='flex items-center flex-col justify-center'>
      <div
        class='flex justify-between items-center border-b-1 border-gray-800 w-full px-4 py-2 text-black'
      >
        <h3
          class='flex flex-col text-xl font-ISBold leading-snug tracking-normal pb-3'
        >
          {title}
          <hr class='border-2 border-yellow-500 w-10' />
          <span class='font-ISRegular text-xs text-gray-500 pt-3'>
            {description}
          </span>
        </h3>
      </div>
    </a>
  </div>
</section>
